	<!-- 配置session超时时间，单位分钟 -->
	<session-config>
		<session-timeout>720</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>